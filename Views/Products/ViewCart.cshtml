@model List<OkZim.Models.Cart>

<h2>Your Shopping Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.ProductPrice.ToString("C")</td>
                <td>@item.Quantity</td>
                <td>@item.TotalPrice.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<p>Total Cart Value: @Model.Sum(item => item.TotalPrice).ToString("C")</p>

<div class="purchase">

    <button id="buy">purchase</button>

</div>
